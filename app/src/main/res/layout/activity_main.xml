<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.linggom.berliantoparlinggomsaragih_1202150016_modul1.MainActivity">

    <TextView
        android:id="@+id/textmakanmalam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makan Malam"
        android:layout_marginTop="20dp"
        android:textSize="26dp"
        android:textColor="@color/textcolor3"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/textdenganmilea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor4"
        android:textSize="17dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="125dp"
        android:text="Dengan Milea" />

    <EditText
        android:id="@+id/pmakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Nama Menu"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/porsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jumlah Porsi"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="85dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_eatbus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="44dp"
            android:text="Eatbus"
            android:onClick="eatbus"
            android:textColor="@color/textcolor"
            android:background="@color/colorAccent"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="20dp" />



        <Button
            android:id="@+id/button_abnormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/textcolor2"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="50dp"
            android:text="Abnormal"
            android:onClick="abnormal"
            tools:layout_editor_absoluteX="236dp"
            tools:layout_editor_absoluteY="267dp" />

    </LinearLayout>
</LinearLayout>